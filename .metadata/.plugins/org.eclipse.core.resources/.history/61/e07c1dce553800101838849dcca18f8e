#include "stm32f407xx.h"
#include "MPU6050.h"
void Error_Handler(void);

I2C_HandleTypeDef hi2c1;


int main(void){


	if (MPU6050_Init(&hi2c1) != HAL_OK)
	{
		Error_Handler();
	}

	while (1)
	{
		if (MPU6050_ReadData(&hi2c1, &sensor_data) == HAL_OK)
		{
			MPU6050_ConvertData(&sensor_data, &converted_data);
		}
	}
}

void Error_Handler(void)
{
	while(1);
}
