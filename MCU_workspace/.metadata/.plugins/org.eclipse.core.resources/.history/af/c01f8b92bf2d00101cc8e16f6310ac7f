#include "stm32f407xx.h"

USART_HandleTypeDef USART_Handle;

void delay(void)
{
	for(uint32_t i = 0 ; i < 500000/2 ; i ++);
}

char data = 'c';


int main(void)
{
	//Init USART Parameter
	USART_SetParam(USART_Handle, USART2, USART_MODE_RX, USART_STOPBITS_1, USART_WORDLENGTH_8BITS, USART_PARITY_NONE, USART_BAUDRATE_9600);




	while (1)
	{
		USART_Transmit(&USART_Handle, (char*)&data, 1);
		delay();

	}

}
